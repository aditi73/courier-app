<div class="global-container">
  <div class="card login-form">
    <div class="card-body">
      <h3 class="card-title text-center">Log up</h3>
      <div class="card-text">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <label for="email">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", id: "email", "aria-describedby":"email" %>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <a href="#" style="float:right;font-size:12px;">Forgot password?</a>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm", id: "password" %>
          </div>
          <div class="form-group">
            <label for="password">Password Confirmation</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm", id: "password" %>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Sign up</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
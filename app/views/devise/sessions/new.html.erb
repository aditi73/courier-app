<div class="global-container">
  <div class="card login-form">
    <div class="card-body">
      <h3 class="card-title text-center">Log in</h3>
      <div class="card-text">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <label for="email">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", id: "email", "aria-describedby":"email" %>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <a href="#" style="float:right;font-size:12px;">Forgot password?</a>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm", id: "password" %>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Sign in</button>
          <div class="sign-up">
            Don't have an account? <a href="/users/sign_up">Create One</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%#= render "users/shared/links" %>
